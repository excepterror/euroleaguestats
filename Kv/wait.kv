<Wait>:
    name: 'wait'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: 'Please wait...'
        font_name: 'MyriadPro'
        font_size: dp(48)
        color: 0, 0, 0, 1
        pos_hint: {'center_x': .5, 'center_y': .4}