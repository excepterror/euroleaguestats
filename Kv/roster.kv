<Roster>:
    name: 'roster'
    num_players: self.num_players
    grid: grid
    scroll_roster: scroll_roster
    Image:
        source: 'Images/Cross-Screen.jpg'
        fit_mode: 'fill'
    RoundedRectLabelBtn:
        text: 'Click me'
        font_name: 'MyriadPro'
        font_size: sp(24)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .7, None
        height: dp(80)
        pos_hint: {'center_x': .5, 'center_y': .92}
        color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgba: 1, 0, 0, 0
            RoundedRectangle:
                segments: 70
                radius: dp(15), dp(15), dp(15), dp(15)
                pos: self.pos
                size: self.size
        on_press: root.call_teams_screen()
    ScrollView:
        id: scroll_roster
        pos_hint: {'center_x': .5, 'center_y': .43}
        size_hint: .98, .82
        do_scroll_x: False
        bar_pos_y: 'right'
        bar_color: 1, 1, 1, 0
        bar_inactive_color: 1, 1, 1, 0
        bar_margin: -dp(3)
        bar_width: dp(2)
        GridLayout:
            id: grid
            cols: 2
            size_hint: 1, None
            height: self.minimum_height
            row_force_default: True
            row_default_height: dp(200)
            spacing: 0, dp(5)

<PlayerImage>:
    fit_mode: 'contain'
    label: label
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.2
        BoxShadow:
            pos: self.pos
            size: self.width - dp(5), self.height - dp(5)
            blur_radius: 0
            border_radius: dp(15), dp(15), dp(15), dp(15)
    Label:
        id: label
        text: root.player
        font_name: 'MyriadPro'
        font_size: sp(14)
        pos: root.x + root.width * .5 - self.width * .5, root.y - self.width * .32
        size_hint: 1, 1
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        canvas.before:
            Color:
                rgba: 0, 0, 0, .8
            RoundedRectangle:
                pos: root.x, root.y
                size: root.width - dp(7), dp(40)
                segments: 70
                radius: dp(0), dp(0), dp(15), dp(15)