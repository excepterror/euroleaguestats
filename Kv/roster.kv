#:import SlidingLabelGrid Widgets.grid_for_roster

<Roster>:
    name: 'roster'
    grid_roster: grid_roster
    player_name: root.grid_roster.name
    scroll_roster: scroll_roster
    selection_flag: root.grid_roster.selection_flag
    canvas.after:
        Color:
            rgba: 0 ,0 ,0, root.canvas_opacity
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source: 'Images/Rosters.jpg'
        fit_mode: 'fill'
    RoundedRectLabelBtn:
        text: 'Click me'
        font_name: 'MyriadPro'
        font_size: sp(24)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .7, None
        height: dp(80)
        pos_hint: {'center_x': .5, 'center_y': .92}
        color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgba: 1, 0, 0, 0
            RoundedRectangle:
                segments: 70
                radius: dp(15), dp(15), dp(15), dp(15)
                pos: self.pos
                size: self.size
        on_press: root.call_teams_screen()
    ScrollView:
        id: scroll_roster
        pos_hint: {'center_x': .5, 'center_y': .35}
        size_hint: .98, .68
        do_scroll_x: False
        bar_pos_y: 'right'
        bar_color: 1, 1, 1, .8
        bar_inactive_color: 1, 1, 1, 0
        bar_margin: -dp(3)
        bar_width: dp(2)
        SlidingLabelGrid:
            id: grid_roster
            cols: 1
            row_force_default: True
            row_default_height: dp(60)
            size_hint: 1, None
            height: self.minimum_height
            spacing: dp(10)
            padding: dp(7)

<SlidingLabel>:
    pos: self.pos
    label: label
    Label:
        id: label
        text: root.name
        font_name: 'MyriadPro'
        font_size: sp(22)
        color: 0, 0, 0, 1
        size_hint: None, None
        size: self.parent.width, dp(60)
        text_size: self.width, None
        halign: 'center'
        valign: 'middle'
        canvas.before:
            Color:
                rgba: root.r, root.g, root.b, root.a
            RoundedRectangle:
                size: self.size
                segments: 70
                radius: dp(10), dp(10), dp(10), dp(10)