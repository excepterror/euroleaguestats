#:import RoundedRectLabelBtn Widgets.widgets

<Menu>:
    name: 'menu'
    current: current
    standings: standings
    about: about
    Image:
        source: 'Images/Cross-Screen.jpg'
        keep_ratio: False
        allow_stretch: True
    RoundedRectLabelBtn:
        id: current
        text: 'Current Season'
        font_name: 'OpenSans'
        font_size: sp(22)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .85, .1
        color: 0, 0, 0, 1
        pos_hint: {'center_x': .5, 'center_y': .65}
        canvas.before:
            Color:
                rgba: 1 ,1 ,1, .8
            RoundedRectangle:
                segments: 70
                radius: dp(7), dp(7), dp(7), dp(7)
                pos: self.pos
                size: self.size
        on_press: root.animate_on_push(self)
    RoundedRectLabelBtn:
        id: standings
        text: 'Standings'
        font_name: 'OpenSans'
        font_size: sp(22)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .85, .1
        color: 0, 0, 0, 1
        pos_hint: {'center_x': .5, 'center_y': .45}
        canvas.before:
            Color:
                rgba: 1 ,1 ,1, .8
            RoundedRectangle:
                segments: 70
                radius: dp(7), dp(7), dp(7), dp(7)
                pos: self.pos
                size: self.size
        on_press: root.animate_on_push(self)
    RoundedRectLabelBtn:
        id: about
        text: 'About'
        font_name: 'OpenSans'
        font_size: sp(22)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .85, .1
        color: 0, 0, 0, 1
        pos_hint: {'center_x': .5, 'center_y': .25}
        canvas.before:
            Color:
                rgba: 1, 1, 1, .8
            RoundedRectangle:
                segments: 70
                radius: dp(7), dp(7), dp(7), dp(7)
                pos: self.pos
                size: self.size
        on_press: root.animate_on_push(self)