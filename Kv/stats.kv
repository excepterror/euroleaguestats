### Screen to display options for Average and Total stats, as well as Stats by game. ###

#:import RVMod Widgets.rv_stats_options

<Stats>:
    name: 'stats'
    recycle_view_mod: recycle_view_mod
    float_layout: float_layout
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Image:
            size_hint: 1, .25
            source: 'Images/000.png'
        FloatLayout:
            id: float_layout
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: dp(15), dp(15), 0, 0
                    source: 'Images/005.jpg'
            Label:
                text: '[i]' + root.player_name + '[/i]'
                font_name: 'MyriadPro'
                pos_hint: {'center_x': .5, 'center_y': .91}
                font_size: sp(45)
                size_hint: 1, None
                text_size: self.width, None
                height: self.texture_size[1]
                halign: 'center'
                valign: 'middle'
                markup: True
            Label:
                text: '[i]' + root.text_1 + '[/i]'
                font_name: 'MyriadPro'
                pos_hint: {'center_x': .5, 'center_y': .85}
                font_size: sp(30)
                size_hint: 1, None
                text_size: self.width, None
                height: self.texture_size[1]
                halign: 'center'
                valign: 'middle'
                markup: True
            Label:
                text: '[i]' + root.text_2 + '[/i]'
                font_name: 'MyriadPro'
                pos_hint: {'center_x': .5, 'center_y': .8}
                font_size: sp(20)
                size_hint: 1, None
                text_size: self.width, None
                height: self.texture_size[1]
                halign: 'center'
                valign: 'middle'
                markup: True
            RoundedRectLabelBtn:
                text: 'Average & Total Stats'
                font_name: 'MyriadPro'
                font_size: sp(18)
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                size_hint: .96, None
                height: dp(50)
                pos_hint: {'center_x': .5, 'center_y': .71}
                color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .2
                    RoundedRectangle:
                        segments: 70
                        radius: dp(15), dp(15), dp(15), dp(15)
                        pos: self.pos
                        size: self.size
                on_press: root.animate_on_push(self)
            RVMod:
                id: recycle_view_mod
                pos_hint: {'center_x': .5, 'center_y': .33}
                size_hint: .98, .63

<RVMod>:
    viewclass: 'SelectableLabel'
    bar_pos_y: 'right'
    bar_color: 1, 1, 1, 0
    bar_margin: -dp(8)
    bar_inactive_color: 1, 1, 1, 0
    smooth_scroll_end: 10
    SelectableRecycleBoxLayout:
        default_size: None, dp(50)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(5)
        multiselect: False
        touch_multiselect: False

<SelectableLabel>:
    # Draw a background to indicate selection.
    text_size: self.width, None
    font_size: sp(17)
    font_name: 'MyriadPro'
    halign: 'center'
    valign: 'middle'
    color: (0, 0, 0, 1) if self.selected else (1, 1, 1, 1)
    canvas.before:
        Color:
            rgba: (1, 1, 1, .8) if self.selected else (1, 1, 1, .2)
        RoundedRectangle:
            segments: 70
            radius: [dp(15), dp(15), dp(15), dp(15)]
            pos: self.pos
            size: self.size