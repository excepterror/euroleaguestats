<Stats>:
    name: 'stats'
    NullLabel:
        text: ' '
        size_hint: .54, .09
        pos_hint: {'center_x': .5, 'center_y': .91}
        canvas.before:
            Color:
                rgba: 1, .2, 0, .9
            RoundedRectangle:
                segments: 70
                radius: 60, 0
                pos: self.pos
                size: self.size
    RoundedRectLabelBtn:
        text: root.player_name
        font_name: 'OpenSans'
        size_hint: .537, .086
        pos_hint: {'center_x': .5, 'center_y': .91}
        font_size: '22dp'
        color: 1, 1, 1, 1
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            RoundedRectangle:
                segments: 70
                radius: 60, 0
                pos: self.pos
                size: self.size
    Image:
        source: root.player_photo
        size_hint: None, None
        width: '250dp'
        height: '250dp'
        pos_hint: {'center_x': .5, 'center_y': .70}
    Label:
        text: root.text_1 + '[color=FF6600]' + '  |  ' + '[/color]' + root.text_2
        font_name: 'OpenSans'
        pos_hint: {'center_x': .5, 'center_y': .46}
        font_size: '17sp'
        color: 1, 1, 1, 1
        size_hint: .9, None
        text_size: self.width, None
        height: self.texture_size[1]
        halign: 'center'
        valign: 'middle'
        markup: True
    RoundedRectLabelBtn:
        text: 'Average Stats'
        font_name: 'OpenSans'
        font_size: '22sp'
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .7, .13
        pos_hint: {'center_x': .5, 'center_y': .3}
        color: 0, 0, 0, 1
        canvas.before:
            Color:
                rgba: 1, 1, 1, .9
            RoundedRectangle:
                segments: 70
                radius: 80, 0
                pos: self.pos
                size: self.size
        on_press: root.select_stats(self)
    RoundedRectLabelBtn:
        text: 'Total Stats'
        font_name: 'OpenSans'
        font_size: '22sp'
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .7, .13
        pos_hint: {'center_x': .5, 'center_y': .12}
        color: 0, 0, 0, 1
        canvas.before:
            Color:
                rgba: 1, 1, 1, .9
            RoundedRectangle:
                segments: 70
                radius: 80, 0
                pos: self.pos
                size: self.size
        on_press: root.select_stats(self)