#:import RVMod Widgets.rv_stats_by_game

<StatsByGame>:
    name: 'stats_by_game'
    canvas.before:
        Color:
            rgba: 1, 1, 1, .8
        Rectangle:
            size: self.size
    RoundedRectLabelBtn:
        text: 'Menu'
        font_name: 'OpenSans'
        font_size: dp(21)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .43, .097
        color: 1, 1, 1, 1
        pos_hint: {'x': .06, 'center_y': .065}
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            RoundedRectangle:
                segments: 70
                radius: 60, 0, 0, 60
                pos: self.pos
                size: self.size
        on_press: root.call_menu_screen()
    RoundedRectLabelBtn:
        text: 'All done'
        font_name: 'OpenSans'
        font_size: dp(21)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .43, .097
        color: 1, 1, 1, 1
        pos_hint: {'x': .51, 'center_y': .065}
        canvas.before:
            Color:
                rgba: 1, .4, 0, 1
            RoundedRectangle:
                segments: 70
                radius: 0, 60, 60, 0
                pos: self.pos
                size: self.size
        on_press: root.parent.exit_app()

<SelectableLabel>:
    # Draw a background to indicate selection.
    text_size: self.width, None
    font_size: dp(16)
    font_name: 'OpenSans'
    halign: 'center'
    valign: 'middle'
    color: 1, .4, 0, 1
    canvas.before:
        Color:
            rgba: (0, 0, 0, .5) if self.selected else (0, 0, 0, 1)
        RoundedRectangle:
            segments: 70
            radius: 7,0
            pos: self.pos
            size: self.size

<RVMod>:
    viewclass: 'SelectableLabel'
    size_hint: .95, .85
    pos_hint: {'center_x': .5, 'y': .13}
    bar_pos_y: 'right'
    bar_width: dp(2)
    bar_margin: -dp(1)
    bar_color: 1, .4, 0, 1
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        size_hint_x: None
        width: root.width
        orientation: 'vertical'
        spacing: 5
        padding: 5
        multiselect: False
        touch_multiselect: False