#:import RVMod Widgets.rv_stats_by_game

<StatsByGame>:
    name: 'stats_by_game'
    recycle_view_mod: recycle_view_mod
    Image:
        source: 'Images/Cross-Screen.jpg'
        keep_ratio: False
        allow_stretch: True
    RVMod:
        id: recycle_view_mod
        pos_hint: {'center_x': .5, 'center_y': .47}
        size_hint: .95, .68
    RoundedRectLabelBtn:
        text: 'Menu'
        font_name: 'OpenSans'
        font_size: sp(24)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .43, None
        height: dp(60)
        color: 1, 1, 1, 1
        pos_hint: {'x': .07, 'center_y': .065}
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            RoundedRectangle:
                segments: 70
                radius: dp(30), 0, 0, dp(30)
                pos: self.pos
                size: self.size
        on_press: root.call_menu_screen()
    RoundedRectLabelBtn:
        text: 'All done'
        font_name: 'OpenSans'
        font_size: sp(24)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .43, None
        height: dp(60)
        color: 1, 1, 1, 1
        pos_hint: {'x': .5, 'center_y': .065}
        canvas.before:
            Color:
                rgba: 1, .4, 0, 1
            RoundedRectangle:
                segments: 70
                radius: 0, dp(30), dp(30), 0
                pos: self.pos
                size: self.size
        on_press: root.parent.exit_app()

<RVMod>:
    viewclass: 'SelectableLabel'
    size_hint: .95, .85
    pos_hint: {'center_x': .5, 'y': .13}
    bar_pos_y: 'right'
    bar_color: 1, 1, 1, .8
    bar_margin: -dp(8)
    bar_inactive_color: 1, 1, 1, 0
    smooth_scroll_end: 10
    SelectableRecycleBoxLayout:
        default_size: None, dp(60)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        spacing: dp(5)
        padding: dp(5)
        multiselect: False
        touch_multiselect: False

<SelectableLabel>:
    # Draw a background to indicate selection.
    text_size: self.width, None
    font_size: sp(19)
    font_name: 'OpenSans'
    halign: 'center'
    valign: 'middle'
    color: (0, 0, 0, 1) if self.selected else (1, 1, 1, 1)
    canvas.before:
        Color:
            rgba: (1, 1, 1, .8) if self.selected else (1, 1, 1, .2)
        RoundedRectangle:
            segments: 70
            radius: [dp(30), dp(30), dp(30), dp(30)]
            pos: self.pos
            size: self.size