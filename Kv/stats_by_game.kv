#:import RVMod Widgets.rv_stats_by_game

<StatsByGame>:
    name: 'stats_by_game'
    recycle_view_mod: recycle_view_mod
    Image:
        source: 'Images/Cross-Screen.jpg'
        keep_ratio: False
        allow_stretch: True
    RVMod:
        id: recycle_view_mod
        pos_hint: {'center_x': .5, 'center_y': .47}
        size_hint: .95, .68
    RoundedRectLabelBtn:
        text: '[i]' + 'TEAMS' + '[/i]'
        font_name: 'MyriadPro'
        font_size: sp(48)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        markup: True
        size_hint: .88, .08
        color: 1, 1, 1, 1
        pos_hint: {'center_x': .5, 'center_y': .065}
        canvas.before:
            Color:
                rgba: 1, 1, 1, .2
            RoundedRectangle:
                segments: 70
                radius: dp(15), dp(15), dp(15), dp(15)
                pos: self.pos
                size: self.size
        on_press: root.call_teams_screen()

<RVMod>:
    viewclass: 'SelectableLabel'
    size_hint: .95, .85
    pos_hint: {'center_x': .5, 'y': .13}
    bar_pos_y: 'right'
    bar_color: 1, 1, 1, .8
    bar_margin: -dp(8)
    bar_inactive_color: 1, 1, 1, 0
    smooth_scroll_end: 10
    SelectableRecycleBoxLayout:
        default_size: None, dp(60)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(5)
        multiselect: False
        touch_multiselect: False

<SelectableLabel>:
    # Draw a background to indicate selection.
    text_size: self.width, None
    font_size: sp(17)
    font_name: 'MyriadPro'
    halign: 'center'
    valign: 'middle'
    color: (0, 0, 0, 1) if self.selected else (1, 1, 1, 1)
    canvas.before:
        Color:
            rgba: (1, 1, 1, .8) if self.selected else (1, 1, 1, .2)
        RoundedRectangle:
            segments: 70
            radius: [dp(15), dp(15), dp(15), dp(15)]
            pos: self.pos
            size: self.size