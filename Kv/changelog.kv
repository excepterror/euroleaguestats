#:import LabelBtn Widgets.widgets

<Changelog>:
    name: 'changelog'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
    RoundedRectLabelBtn:
        text: 'Back to Menu'
        font_size: '21sp'
        font_name: 'OpenSans'
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .85, .1
        color: 1, 1, 1, 1
        pos_hint: {'center_x': .5, 'center_y': .1}
        canvas.before:
            Color:
                rgba: 1, .4, 0, 1
            RoundedRectangle:
                segments: 70
                radius: 60, 0
                pos: self.pos
                size: self.size
        on_press: root.call_menu_screen()
    Label:
        text: 'ELS'
        font_name: 'OpenSans'
        font_size: '50sp'
        pos_hint: {'center_x': .5, 'center_y': .93}
        color: 0, 0, 0, 1
        size_hint: 1, None
        text_size: self.width, None
        height: self.texture_size[1]
        halign: 'center'
        valign: 'middle'
    Label:
        text: '23.01.2'
        font_name: 'OpenSans'
        font_size: '17sp'
        pos_hint: {'center_x': .5, 'center_y': .88}
        color: 0, 0, 0, 1
        size_hint: 1, None
        text_size: self.width, None
        height: self.texture_size[1]
        halign: 'center'
        valign: 'middle'
    Label:
        text: root.text_1
        font_name: 'OpenSans'
        font_size: '20sp'
        pos_hint: {'center_x': .5, 'center_y': .7}
        color: 0, 0, 0, 1
        size_hint: .9, None
        text_size: self.width, None
        height: self.texture_size[1]
        halign: 'center'
        valign: 'center'
        markup: True
    RoundedRectLabelBtn:
        text: ''
        font_name: 'OpenSans'
        font_size: '16sp'
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .5, .12
        color: 1, 1, 1, 0
        pos_hint: {'center_x': .5, 'center_y': .48}
        canvas.before:
            Color:
                rgba: 1, .4, 0, 1
            RoundedRectangle:
                segments: 70
                radius: 7, 7, 7, 7
                pos: self.pos
                size: self.size
    RoundedRectLabelBtn:
        text: 'View Notes'
        font_name: 'OpenSans'
        font_size: '20sp'
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .495, .115
        color: 1, .4, 0, 1
        pos_hint: {'center_x': .5, 'center_y': .48}
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            RoundedRectangle:
                segments: 70
                radius: 7, 7, 7, 7
                pos: self.pos
                size: self.size
        on_press: root.view_notes()
    RoundedRectLabelBtn:
        text: ''
        font_name: 'OpenSans'
        font_size: '16sp'
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .5, .12
        color: 1, 1, 1, 0
        pos_hint: {'center_x': .5, 'center_y': .3}
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            RoundedRectangle:
                segments: 70
                radius: 7, 7, 7, 7
                pos: self.pos
                size: self.size
    RoundedRectLabelBtn:
        text: 'Privacy Policy'
        font_name: 'OpenSans'
        font_size: '20sp'
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: .495, .115
        color: 0, 0, 0, 1
        pos_hint: {'center_x': .5, 'center_y': .3}
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            RoundedRectangle:
                segments: 70
                radius: 7, 7, 7, 7
                pos: self.pos
                size: self.size
        on_press: root.view_privacy_policy()