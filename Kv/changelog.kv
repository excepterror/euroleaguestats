<Changelog>:
    name: 'changelog'
    privacy_policy: privacy_policy
    BoxLayout:
        orientation: 'vertical'
        Image:
            size_hint: 1, .25
            source: 'Images/000.png'
        FloatLayout:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: dp(15), dp(15), 0, 0
                    source: 'Images/006.jpg'
            Label:
                text: 'Thank you for downloading ELS.\n\nELS is an Android application that allows you to view performance data for all players in the\nEuroleague basketball club competition.'
                font_name: 'MyriadPro'
                font_size: sp(18)
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                color: 1, 1, 1, 1
                pos_hint: {'center_x': .5, 'center_y': .86}
    RoundedRectLabelBtn:
        id: privacy_policy
        text: '[i]' + 'PRIVACY POLICY' + '[/i]'
        markup: True
        font_name: 'MyriadPro'
        font_size: sp(48)
        text_size: self.size
        halign: 'center'
        valign: 'center'
        size_hint: .88, .08
        color: 1, 1, 1, 1
        pos_hint: {'center_x': .5, 'center_y': .35}
        canvas.before:
            Color:
                rgba: 1, 1, 1, .2
            RoundedRectangle:
                segments: 70
                radius: dp(15), dp(15), dp(15), dp(15)
                pos: self.pos
                size: self.size
        on_press: root.stats_animate_on_push(self)
    Label:
        text: 'ELS v24.04.3'
        font_name: 'MyriadPro'
        font_size: sp(14)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        color: 1, 1, 1, 1
        pos_hint: {'center_x': .5, 'center_y': .02}