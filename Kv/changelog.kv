#:import BoxShadow kivy.graphics.boxshadow.BoxShadow

<Changelog>:
    name: 'changelog'
    Image:
        source: 'Images/About.jpg'
        keep_ratio: False
        allow_stretch: True
    RoundedRectLabelBtn:
        text: 'Back to Menu'
        font_size: dp(32)
        font_name: 'OpenSans'
        text_size: self.size
        halign: 'center'
        valign: 'center'
        size_hint: .85, None
        height: dp(60)
        color: 0, 0, 0, 1
        pos_hint: {'center_x': .5, 'center_y': .1}
        canvas.before:
            Color:
                rgba: 1, 1, 1, .8
            BoxShadow:
                pos: self.pos
                size: self.size
                offset: 0, 0
                border_radius: 60, 60, 60, 60
                blur_radius: 60
                spread_radius: -25
            Color:
                rgba: 1, 1, 1, .6
            RoundedRectangle:
                segments: 70
                radius: 30, 30, 30, 30
                pos: self.pos
                size: self.size
        on_press: root.call_menu_screen()
    RoundedRectLabelBtn:
        text: '[i]' + 'VIEW NOTES' + '[/i]'
        markup: True
        font_name: 'MyriadPro'
        font_size: dp(44)
        text_size: self.size
        halign: 'center'
        valign: 'center'
        size_hint: .7, .14
        color: 1, 1, 1, 1
        pos_hint: {'center_x': .5, 'center_y': .48}
        canvas.before:
            Color:
                rgba: 1, 1, 1, .2
            RoundedRectangle:
                segments: 70
                radius: 7, 7, 7, 7
                pos: self.pos
                size: self.size
        on_press: root.view_notes()
    RoundedRectLabelBtn:
        text: '[i]' + 'PRIVACY POLICY' + '[/i]'
        markup: True
        font_name: 'MyriadPro'
        font_size: dp(44)
        text_size: self.size
        halign: 'center'
        valign: 'center'
        size_hint: .7, .14
        color: 1, 1, 1, 1
        pos_hint: {'center_x': .5, 'center_y': .3}
        canvas.before:
            Color:
                rgba: 1, 1, 1, .2
            RoundedRectangle:
                segments: 70
                radius: 7, 7, 7, 7
                pos: self.pos
                size: self.size
        on_press: root.view_privacy_policy()