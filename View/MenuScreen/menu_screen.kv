#:import RoundedRectLabelBtn Widgets.widgets
#:import clock kivy.clock.Clock

#:import RoundedWidget Widgets.widgets

<MenuScreenView>:
    name: "menu screen"
    teams: teams
    standings: standings
    about: about
    FloatLayout:
        Image:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 1, .25
            pos_hint: {"x": 0, "top": 1}
            source: "Assets/LogoWhite.png"
        RoundedWidget:
            pos_hint: {'x': 0, 'y':0}
            size_hint:  1, .75
        RoundedRectLabelBtn:
            id: teams
            text: "[i]TEAMS[/i]"
            font_name: "MyriadPro"
            font_size: sp(48)
            text_size: self.size
            halign: "center"
            valign: "middle"
            size_hint: .88, .08
            pos_hint: {"center_x": .5, "center_y": .5}
            color: 1, 1, 1, 1
            markup: True
            canvas.before:
                Color:
                    rgba: 1, 1, 1, .2
                RoundedRectangle:
                    segments: 70
                    radius: [dp(15)]*4
                    pos: self.pos
                    size: self.size
            on_release: root.stats_animate_on_push(self)
        RoundedRectLabelBtn:
            id: standings
            text: '[i]' + 'STANDINGS' + '[/i]'
            font_name: 'MyriadPro'
            font_size: sp(48)
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: .88, .08
            color: 1, 1, 1, 1
            pos_hint: {'center_x': .5, 'center_y': .38}
            markup: True
            canvas.before:
                Color:
                    rgba: 1 ,1 ,1, .2
                RoundedRectangle:
                    segments: 70
                    radius: dp(15), dp(15), dp(15), dp(15)
                    pos: self.pos
                    size: self.size
            on_release: root.stats_animate_on_push(self)
        RoundedRectLabelBtn:
            id: about
            text: 'About the app'
            font_name: 'MyriadPro'
            font_size: sp(15)
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: .4, .06
            color: 1 ,1 ,1, 1
            pos_hint: {'center_x': .5, 'center_y': .1}
            canvas.before:
                Color:
                    rgba: 1, 1, 1, .2
                RoundedRectangle:
                    segments: 70
                    radius: dp(15), dp(15), dp(15), dp(15)
                    pos: self.pos
                    size: self.size
            on_release: root.about_animate_on_push(self)