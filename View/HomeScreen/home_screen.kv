#:import clock kivy.clock.Clock

#:import partial functools.partial

#:import NotificationWidget Widgets.notification

#:import logging logging

<HomeScreenView>:
    name: "home screen"
    on_enter: self.flag = True; logging.info("[home_screen.kv] HomeScreen flag triggered!")
    on_flag: clock.schedule_once(root.schedule_intro_image_display, 0)
    notification: notification
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Image:
            size_hint: 1, .25
            source: 'Assets/000.png'
        FloatLayout:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: dp(15), dp(15), 0, 0
                    source: 'Assets/001.jpg'
    NotificationWidget:
        id: notification