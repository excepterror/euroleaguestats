#:import clock kivy.clock.Clock
#:import partial functools.partial

<HomeScreenView>:
    name: "home screen"
    on_enter: self.flag = True
    on_flag: clock.schedule_once(root.allow_intro_image_display, 0)
    on_standings: app.load_kv_files(); clock.schedule_once(partial(app.set_current_screen, "menu screen"), 2)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Image:
            size_hint: 1, .25
            source: 'Images/000.png'
        FloatLayout:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: dp(15), dp(15), 0, 0
                    source: 'Images/001.jpg'